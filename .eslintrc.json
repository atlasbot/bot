{
	"extends": "airbnb-base",
	"parserOptions": {
		"sourceType": "script"
	},
	"rules": {
		"no-continue": 0,
		"strict": 0,
		"valid-jsdoc": [
			"error",
			{
				"requireReturn": false,
				"requireReturnDescription": false,
				"preferType": {
					"String": "string",
					"Number": "number",
					"Boolean": "boolean",
					"Function": "function",
					"object": "Object",
					"date": "Date",
					"error": "Error"
				},
				"prefer": {
					"return": "returns"
				}
			}
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-tabs": 0,
		"linebreak-style": "off",
		"no-restricted-syntax": ["off"],
		"no-console": "off",
		"no-plusplus": "off",
		"max-len": "off",
		"class-methods-use-this": "off",
		"no-underscore-dangle": "off",
		"no-restricted-globals": "off",
		"no-await-in-loop": "off",
		"object-curly-newline": "off",
		"global-require": 0,
		"consistent-return": 0,
		"no-param-reassign": 0,
		"newline-before-return": 2,
		"import/no-dynamic-require": 0
	}
}
